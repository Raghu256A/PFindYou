<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:id="@+id/ll_verifyOTP"
        android:background="@drawable/layout_bg"
        android:layout_margin="5dp"
        android:visibility="visible"
        android:orientation="vertical">

        <View
            android:id="@+id/view_close"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginEnd="15dp"
            android:layout_marginTop="15dp"
            android:layout_gravity="end"
            android:backgroundTint="@color/lite_red"
            android:background="@drawable/close" />

        <TextView
            android:id="@+id/tv_enter_OTP"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/inter_18px"
            android:text="Enter OTP"
            android:textColor="@color/black"
            android:textSize="28sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="We have sent the code to your phone"
            android:textColor="@color/black"
            android:textSize="14sp"
            android:textStyle="normal"
            android:visibility="visible" />

        <LinearLayout
            android:id="@+id/ll_OTP_box"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            android:gravity="center"
            android:background="@color/gry_l"
            android:orientation="horizontal"
            android:padding="10dp"
            android:visibility="visible">

            <EditText

                android:id="@+id/et_enter_OTP_bx1"
                android:layout_width="55dp"
                android:layout_height="55dp"
                android:layout_marginEnd="10dp"
                android:background="@drawable/otp_box"
                android:digits="1234567890"
                android:fontFamily="@font/inter_18px"
                android:gravity="center"
                android:maxLength="1"
                android:hint="5"
                android:textColor="@color/primary"
                android:textSize="20sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/et_enter_OTP_bx2"
                android:layout_width="55dp"
                android:layout_height="55dp"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:background="@drawable/otp_box"
                android:digits="1234567890"
                android:fontFamily="@font/inter_18px"
                android:gravity="center"
                android:maxLength="1"
                android:hint="5"
                android:textColor="@color/primary"
                android:textSize="20sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/et_enter_OTP_bx3"
                android:layout_width="55dp"
                android:layout_height="55dp"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:background="@drawable/otp_box"
                android:digits="1234567890"
                android:fontFamily="@font/inter_18px"
                android:gravity="center"
                android:maxLength="1"
                android:hint="5"
                android:textColor="@color/primary"
                android:textSize="20sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/et_enter_OTP_bx4"
                android:layout_width="55dp"
                android:layout_height="55dp"
                android:layout_marginStart="10dp"
                android:background="@drawable/otp_box"
                android:digits="1234567890"
                android:fontFamily="@font/inter_18px"
                android:gravity="center"
                android:maxLength="1"
                android:textColor="@color/primary"
                android:textSize="20sp"
                android:hint="5"
                android:textStyle="bold" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:gravity="center"
            android:orientation="vertical">

            <Button
                android:id="@+id/btn_verify_otp"
                android:layout_width="220dp"
                android:layout_height="45dp"
                android:padding="5dp"
                android:layout_marginTop="10dp"
                android:backgroundTint="@color/secondry"
                android:gravity="center"
                android:background="@drawable/edit_text_bg"
                android:text="Verify OTP"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_resend_otp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:text="Resend OTP"
                android:textColor="@color/black_lite"
                android:textSize="12sp"
                android:textStyle="normal"
                android:visibility="visible" />
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/ll_SendOTP"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_margin="5dp"
        android:background="@drawable/layout_bg"
        android:visibility="gone"
        android:orientation="vertical">
        <View
            android:id="@+id/view_close1"
            android:layout_width="30dp"
            android:layout_marginTop="15dp"
            android:layout_gravity="end"
            android:layout_marginEnd="20dp"
            android:layout_height="30dp"
            android:background="@drawable/close" />

        <TextView
            android:id="@+id/tv_Send_OTP"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/inter_18px"
            android:text="Send OTP"
            android:textColor="@color/black"
            android:textSize="28sp"
            android:textStyle="bold"
            android:visibility="visible" />

        <TextView
            android:id="@+id/tv_subTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:text="enter mail/phone number"
            android:textColor="@color/black"
            android:textSize="14sp"
            android:textStyle="normal"
            android:visibility="visible" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="25dp"
            android:gravity="center"
            android:id="@+id/ll_mobileOrMail"
            android:orientation="vertical">
            <EditText
                android:id="@+id/et_mailOrPhone"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:hint="Enter your registered mail/mobile number"
                android:textColor="@color/black"
                android:textSize="13sp"
                android:paddingStart="5dp"
                android:background="@color/gry_l"
                android:inputType="text"
                android:textColorHint="@color/black_lite"
                android:textStyle="bold|normal" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="25dp"
            android:gravity="center"
            android:orientation="vertical">

            <Button
                android:id="@+id/btn_send_otp"
                android:layout_width="220dp"
                android:layout_height="40dp"
                android:backgroundTint="@color/secondry"
                android:gravity="center"
                android:text="Sent OTP"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:background="@drawable/edit_text_bg"
                android:textStyle="bold"
                android:visibility="visible" />
        </LinearLayout>

    </LinearLayout>

</LinearLayout>

