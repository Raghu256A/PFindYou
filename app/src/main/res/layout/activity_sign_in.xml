<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    android:id="@+id/mail"
    tools:context=".activities.Sign_in">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <View
                    android:id="@+id/top_view"
                    android:layout_width="628dp"
                    android:layout_height="300dp"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginStart="-130dp"
                    android:layout_marginTop="-110dp"
                    android:layout_marginEnd="-200dp"
                    android:backgroundTint="@color/primary"
                    android:background="@drawable/top_bennor" />
            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                android:padding="35sp"
                android:layout_marginTop="-150dp"
                android:gravity="center"
                android:layout_marginBottom="-12dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/inter_18px"
                    android:text="Sign in"
                    android:textColor="@color/black"
                    android:textSize="28sp"
                    android:textStyle="bold" />

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    app:boxCornerRadiusTopEnd="5dp"
                    app:boxCornerRadiusTopStart="5dp"
                    app:boxCornerRadiusBottomEnd="5dp"
                    app:boxCornerRadiusBottomStart="5dp"
                    android:layout_marginTop="20dp"
                    android:id="@+id/tv_userId"
                    app:errorEnabled="true"
                    app:errorTextColor="@color/lite_red"
                    android:hint="Email/Phone number"
                    android:paddingStart="5dp"
                    app:hintEnabled="true"
                    app:hintTextColor="@color/black_lite">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/et_userId"
                        android:layout_width="match_parent"
                        android:layout_height="43dp"
                        android:textColor="@color/black"
                        android:textSize="13sp"
                        android:padding="10dp"
                        android:inputType="text"
                        android:textStyle="normal" />
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    app:boxCornerRadiusTopEnd="5dp"
                    app:boxCornerRadiusTopStart="5dp"
                    app:boxCornerRadiusBottomEnd="5dp"
                    app:boxCornerRadiusBottomStart="5dp"
                    android:layout_marginTop="15dp"
                    android:hint="Password"
                    android:id="@+id/tv_password"
                    app:errorEnabled="true"
                    app:errorTextColor="@color/lite_red"
                    android:paddingStart="5dp"
                    app:hintEnabled="true"
                    app:hintTextColor="@color/black_lite">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/et_password"
                        android:layout_width="match_parent"
                        android:layout_height="43dp"
                        android:text=""
                        android:inputType="textPassword"
                        android:textColor="@color/black"
                        android:textSize="13sp"
                        android:padding="10dp"
                        android:drawableTint="@color/primary"
                        android:drawableEnd="@drawable/eye_off"
                        android:textStyle="normal" />
                </com.google.android.material.textfield.TextInputLayout>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/tv_forgetPassword"
                    android:fontFamily="@font/inter_18px"
                    android:text="Forget password ?"
                    android:layout_gravity="end"
                    android:padding="5dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginEnd="10dp"
                    android:textColor="@color/lite_red"
                    android:textSize="14sp"
                    android:textStyle="bold|normal" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_marginTop="-35dp"
                android:orientation="horizontal">

                <View
                    android:layout_width="0dp"
                    android:layout_height="2dp"
                    android:layout_weight="1"
                    android:background="@color/gry" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"
                    android:gravity="center"
                    android:text="or"
                    android:textColor="@color/black"
                    android:textSize="12sp"
                    android:textStyle="bold|normal" />

                <View
                    android:layout_width="0dp"
                    android:layout_height="2dp"
                    android:layout_weight="1"
                    android:background="@color/gry" />

            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginTop="5dp"
                android:layout_weight="0.5"
                android:gravity="center"
                android:text="Login With"
                android:textColor="@color/black"
                android:textSize="15sp"
                android:textStyle="normal" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:gravity="center"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">

                <LinearLayout
                    android:id="@+id/ll_login_mail"
                    android:layout_width="85dp"
                    android:layout_height="35dp"
                    android:layout_marginEnd="16dp"
                    android:background="@drawable/button_bgm"
                    android:gravity="center"
                    android:backgroundTint="@color/primary"
                    android:orientation="vertical">
                    <View
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:background="@drawable/gmail_icon" />
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/ll_login_phone"
                    android:layout_width="85dp"
                    android:layout_height="35dp"
                    android:layout_marginStart="16dp"
                    android:background="@drawable/button_bgm"
                    android:gravity="center"
                    android:backgroundTint="@color/primary"
                    android:orientation="vertical">
                    <View
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:background="@drawable/phone" />
                </LinearLayout>


            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">



                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="Donâ€™t have an account ? "
                    android:textColor="@color/black"
                    android:textSize="12sp"
                    android:textStyle="normal" />
                <LinearLayout
                    android:layout_width="48dp"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_signUp"
                    android:layout_width="48dp"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text=" sing up"
                    android:textColor="@color/primary"
                    android:textSize="13sp"
                    android:textStyle="bold|normal" />
                    <View
                        android:layout_width="49dp"
                        android:layout_height="2dp"
                        android:layout_marginStart="2dp"
                        android:layout_gravity="center"
                        android:background="@color/primary"/>

                </LinearLayout>

            </LinearLayout>
            <LinearLayout
                android:id="@+id/ll_Login"
                android:layout_width="95dp"
                android:layout_margin="10dp"
                android:layout_height="45dp"
                android:background="@drawable/button_bgm"
                android:gravity="center"
                android:backgroundTint="@color/primary"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/primary"
                    android:text="Login"
                    android:textSize="18sp"
                    android:textStyle="bold|normal"
                    />
            </LinearLayout>

        </LinearLayout>
    </ScrollView>

</LinearLayout>