<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:id="@+id/main"
    android:layout_margin="5dp"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:gravity="center"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:gravity="center"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:gravity="start|center"
                android:orientation="horizontal">
                <View
                    android:id="@+id/vw_back"
                    android:layout_width="35dp"
                    android:layout_marginStart="10dp"
                    android:layout_height="35dp"
                    android:background="@drawable/backword_ic" />
                <TextView
                    android:id="@+id/tv_serviceName"
                    android:layout_width="0dp"
                    android:gravity="center|start"
                    android:layout_weight="1"
                    android:layout_height="30dp"
                    android:text="Booking Management"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    android:textStyle="bold|italic"
                    />

                <ImageView
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    android:layout_gravity="end"
                    android:background="@color/white"
                    android:scaleType="fitXY"
                    android:src="@drawable/app_ic"
                    app:tint="@color/green" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:gravity="center"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">
                <EditText
                    android:id="@+id/et_search_bar"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:gravity="center|start"
                    android:layout_weight="1"
                    android:layout_marginStart="10dp"
                    android:hint="search"
                    android:paddingStart="@dimen/_5sdp"
                    android:textSize="17sp"
                    android:textStyle="normal"
                    android:textColor="@color/black"
                    android:background="@drawable/edittext_bg"
                    android:drawableStart="@drawable/search_ic"/>
                <View
                    android:id="@+id/vw_filter"
                    android:layout_width="30dp"
                    android:layout_marginEnd="5dp"
                    android:layout_height="30dp"
                    android:background="@drawable/filter_ic" />
            </LinearLayout>
            <TextView
                android:id="@+id/tv_searchCount"
                android:layout_width="wrap_content"
                android:gravity="center|start"
                android:layout_gravity="start"
                android:layout_marginStart="@dimen/_25sdp"
                android:layout_height="30dp"
                android:text="Top 32 searches"
                android:textColor="@color/black"
                android:textSize="12sp"
                android:textStyle="normal"
                />
        </LinearLayout>
        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:gravity="center"
                android:orientation="vertical">
                <ProgressBar
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:visibility="gone"
                    android:id="@+id/progress_bar"/>
                <androidx.recyclerview.widget.RecyclerView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="5dp"
                    tools:listitem="@layout/booking_manage_view_list"
                    android:id="@+id/rc_showBookings"/>
            </LinearLayout>

        </androidx.core.widget.NestedScrollView>
    </LinearLayout>
    <com.google.android.material.navigation.NavigationView
        android:layout_width="155dp"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:id="@+id/navView"
        android:background="@color/white"
        android:layout_marginTop="@dimen/_65sdp"
        android:layout_alignParentLeft="true"
        app:menu="@menu/booking_filter_menu"
        />
</androidx.drawerlayout.widget.DrawerLayout>