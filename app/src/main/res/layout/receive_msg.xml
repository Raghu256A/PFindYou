<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:layout_width="wrap_content"
        android:background="@drawable/sent_bg"
        android:layout_marginStart="5dp"
        android:layout_marginTop="5dp"
        android:backgroundTint="@color/primary"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/tv_receive_msg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="This is receive message"
            android:textSize="18sp"
            android:padding="10dp"
            android:textColor="@color/white"
            />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="end|center"
            android:layout_marginTop="-8dp"
            android:layout_marginEnd="10dp"
            android:layout_alignEnd="@id/tv_receive_msg"
            android:layout_below="@+id/tv_receive_msg"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_receive_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:text="12:33 PM"
                android:layout_marginEnd="5dp"
                android:textColor="@color/white"
                android:textSize="11sp" />
            <View
                android:id="@+id/tick1"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:padding="5dp"
                android:backgroundTint="@color/gray"
                android:background="@drawable/ticks" />
            <View
                android:id="@+id/tick2"
                android:layout_width="15dp"
                android:layout_marginStart="-11dp"
                android:layout_height="15dp"
                android:padding="5dp"
                android:backgroundTint="@color/green"
                android:background="@drawable/ticks" />

        </LinearLayout>

    </RelativeLayout>

</RelativeLayout>